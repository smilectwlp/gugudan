<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Íµ¨Íµ¨Îã® - Í≥±ÏÖàÌëú</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .container {
            max-width: 1200px;
            width: 100%;
        }

        h1 {
            text-align: center;
            color: white;
            font-size: 3rem;
            margin-bottom: 40px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        }

        .gugudan-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            padding: 20px;
        }

        .gugudan-card {
            background: white;
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .gugudan-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
        }

        .gugudan-title {
            text-align: center;
            font-size: 2rem;
            color: #667eea;
            margin-bottom: 20px;
            font-weight: bold;
            border-bottom: 3px solid #667eea;
            padding-bottom: 10px;
        }

        .gugudan-item {
            padding: 10px;
            margin: 8px 0;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            border-radius: 8px;
            font-size: 1.1rem;
            color: #333;
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: background 0.2s ease;
        }

        .gugudan-item:hover {
            background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
        }

        .equation {
            font-weight: 600;
        }

        .result {
            font-weight: bold;
            color: #667eea;
            font-size: 1.2rem;
        }

        .controls {
            text-align: center;
            margin-bottom: 30px;
        }

        .btn {
            background: white;
            color: #667eea;
            border: none;
            padding: 12px 30px;
            font-size: 1rem;
            border-radius: 25px;
            cursor: pointer;
            margin: 0 10px;
            font-weight: bold;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            transition: all 0.3s ease;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
            background: #667eea;
            color: white;
        }

        .btn.active {
            background: #667eea;
            color: white;
        }

        @media (max-width: 768px) {
            h1 {
                font-size: 2rem;
            }

            .gugudan-grid {
                grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
                gap: 15px;
                padding: 10px;
            }

            .gugudan-card {
                padding: 15px;
            }

            .gugudan-title {
                font-size: 1.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>üî¢ Íµ¨Íµ¨Îã® Í≥±ÏÖàÌëú üî¢</h1>
        
        <div class="controls">
            <button class="btn active" onclick="showAllTables()">Ï†ÑÏ≤¥ Î≥¥Í∏∞</button>
            <button class="btn" onclick="showSingleTable()">Îã® ÏÑ†ÌÉù</button>
        </div>

        <div id="gugudan-container" class="gugudan-grid"></div>
    </div>

    <script>
        function createGugudanCard(dan) {
            let cardHTML = `
                <div class="gugudan-card">
                    <div class="gugudan-title">${dan}Îã®</div>
            `;

            for (let i = 1; i <= 9; i++) {
                const result = dan * i;
                cardHTML += `
                    <div class="gugudan-item">
                        <span class="equation">${dan} √ó ${i}</span>
                        <span class="result">${result}</span>
                    </div>
                `;
            }

            cardHTML += `</div>`;
            return cardHTML;
        }

        function showAllTables() {
            const container = document.getElementById('gugudan-container');
            container.innerHTML = '';
            
            for (let dan = 2; dan <= 9; dan++) {
                container.innerHTML += createGugudanCard(dan);
            }

            // Update button states
            updateButtonStates(0);
        }

        function showSingleTable() {
            const dan = prompt('Î™á Îã®ÏùÑ Î≥¥ÏãúÍ≤†ÏäµÎãàÍπå? (2-9)', '2');
            const danNumber = parseInt(dan);

            if (danNumber >= 2 && danNumber <= 9) {
                const container = document.getElementById('gugudan-container');
                container.innerHTML = createGugudanCard(danNumber);
                updateButtonStates(1);
            } else {
                alert('2Î∂ÄÌÑ∞ 9 ÏÇ¨Ïù¥Ïùò Ïà´ÏûêÎ•º ÏûÖÎ†•Ìï¥Ï£ºÏÑ∏Ïöî!');
            }
        }

        function updateButtonStates(activeIndex) {
            const buttons = document.querySelectorAll('.btn');
            buttons.forEach((btn, index) => {
                if (index === activeIndex) {
                    btn.classList.add('active');
                } else {
                    btn.classList.remove('active');
                }
            });
        }

        // ÌéòÏù¥ÏßÄ Î°úÎìú Ïãú Ï†ÑÏ≤¥ Íµ¨Íµ¨Îã® ÌëúÏãú
        showAllTables();
    </script>
</body>
</html>
